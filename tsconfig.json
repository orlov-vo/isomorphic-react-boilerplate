{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
