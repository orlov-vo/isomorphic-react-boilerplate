  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "webpack-dev-server",
    "start": "node index.js",
    "start:watch": "nodemon",
    "start:prod": "node dist/server.js",
    "build": "yarn clean && yarn build:server && yarn build:client",
    "build:prod": "yarn clean && yarn build:server && yarn build:client:prod",
    "build:server": "tsc --pretty -p ./tsconfig.server.json",
    "build:client": "webpack",
    "build:client:prod": "NODE_ENV=production webpack"
  },
  "dependencies": {
    "express": "^4.16.2",
