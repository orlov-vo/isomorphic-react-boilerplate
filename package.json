    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "postcss-short": "^4.1.0",
    "react-hot-loader": "^3.1.1",
    "rimraf": "^2.6.2",
    "stringify-object": "^3.2.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
