{
  "name": "react-ssr",
  "version": "1.0.0",
  "description": "React SSR boilerplate",
  "author": {
    "name": "Vladislav Orlov",
    "email": "i@orlov-vo.ru",
    "url": "http://orlov-vo.ru"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "webpack-dev-server --config ./webpack/webpack.config.js --env.env=dev",
    "start": "node index.js",
    "start:watch": "nodemon",
    "start:prod": "node dist/server.js",
    "build": "yarn build:dev",
    "build:dev": "yarn clean && yarn build:server && yarn build:client:dev",
    "build:prod": "yarn clean && yarn build:server && yarn build:client:prod",
    "build:server": "tsc --pretty",
    "build:client": "yarn build:client:dev",
    "build:client:dev": "webpack --config ./webpack/webpack.config.js --env.env=dev",
    "build:client:prod": "webpack --config ./webpack/webpack.config.js --env.env=prod"
  },
  "dependencies": {
    "express": "^4.16.2",
    "ramda": "^0.25.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "sass-bem-constructor": "^1.1.0",
    "serve-static": "^1.13.1",
    "typescript": "^2.5.2"
  },
  "devDependencies": {
    "@types/node": "^8.0.28",
    "@types/ramda": "^0.24.17",
    "@types/react": "^16.0.13",
    "@types/react-dom": "^16.0.1",
    "@types/react-hot-loader": "^3.0.4",
    "@types/react-redux": "^5.0.10",
    "@types/react-router-dom": "^4.0.8",
    "@types/webpack-env": "^1.13.2",
    "autoprefixer": "^7.1.5",
    "cache-loader": "^1.1.0",
    "chalk": "^2.2.0",
    "compression-webpack-plugin": "^1.0.1",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "postcss-loader": "^2.0.8",
    "postcss-short": "^4.1.0",
    "react-hot-loader": "^3.1.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.2",
    "style-loader": "^0.19.0",
    "thread-loader": "^1.1.2",
    "ts-loader": "^3.0.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-react": "^3.2.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.2",
    "webpack-merge": "^4.1.0"
  }
}
