    "redux": "^3.7.2",
    "sass-bem-constructor": "^1.1.0",
    "serve-static": "^1.13.1",
    "typescript": "^2.5.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/node": "^8.0.28",
    "@types/ramda": "^0.24.17",
